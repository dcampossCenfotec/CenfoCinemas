@page
@model WebApp.Pages.MoviesModel
@{
}

<script src="~/js/pages/movies.js"></script>

<h1>Movies List</h1>
<div class="row">
    <legend>Movies List</legend>
    <div class="col-lg-12">
        <table id="tblMovies" class="display" style="width: 100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Genre</th>
                    <th>Director</th>
                    <th>Release Date</th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="bs-component">
                <form>
                    <fieldset>
                        <legend>Movie form</legend>
                        <div class="form-group">
                            <label for="txtId" class="form-label mt-4">User ID</label>
                            <input id="txtId" type="number" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="txtTitle" class="form-label mt-4">User code</label>
                            <input id="txtTitle" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="txtDescription" class="form-label mt-4">Name</label>
                            <input id="txtDescription" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="txtGenre" class="form-label mt-4">Email</label>
                            <input id="txtGenre" type="email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="txtDirector" class="form-label mt-4">Status</label>
                            <input id="txtDirector" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="txtReleaseDate" class="form-label mt-4">Birth date</label>
                            <input id="txtReleaseDate" type="date" class="form-control" />
                        </div>
                    </fieldset>
                </form>
                <br />
                <button id="btnCreate" class="source-button btn btn-primary btn-xs" type="button">Save</button>
                <button id="btnUpdate" class="source-button btn btn-info    btn-xs" type="button">Update</button>
                <button id="btnDelete" class="source-button btn btn-danger  btn-xs" type="button">Delete</button>
            </div>
        </div>
    </div>
</div>